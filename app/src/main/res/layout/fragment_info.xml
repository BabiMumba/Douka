            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lubumbashi"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/secondary_text"
            />
