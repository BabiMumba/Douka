<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".Auth.RegisterActivity">
    <LinearLayout
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Creer un compte"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_20ssp"
            />
        <TextView
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completez les informations suivantes\n pour creer un compte"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_13ssp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/primary_text"
                />
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input_new"
                android:hint="Ex: John Doe"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/grey"
                android:textColor="@color/primary_text"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/primary_text"
                />
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input_new"
                android:hint="Ex: john@gmail.com"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/grey"
                android:inputType="textEmailAddress"
                android:textColor="@color/primary_text"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mot de passe"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/primary_text"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Ex: *********"
                app:passwordToggleEnabled="true"
                >
                <EditText
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:textColor="@color/primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terme_condition"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/primary_text"
                />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Accent"
            android:padding="@dimen/_10sdp"
            android:text="Creer un compte"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ou"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_13ssp"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:strokeColor="@color/Accent"
            app:strokeWidth="@dimen/_1sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ogo_google"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continuer avec Google"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/primary_text"
                    />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/already_count"
            android:gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"

            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>