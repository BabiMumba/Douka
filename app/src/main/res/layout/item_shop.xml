<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/card_background"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profil_shp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                app:civ_border_color="@color/primary"
                app:civ_border_width="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:src="@drawable/profile" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profil_shp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toEndOf="@id/img_profil_shp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/item_1_click_parent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/item_1_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/nb_annonce"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLength="20"
                                android:text="Annonce"
                                android:textColor="#787878"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/nb_annonce"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLength="20"
                                android:text=""
                                android:textColor="#262626"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/item_divider_2"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#ececec" />

                        <RelativeLayout
                            android:id="@+id/item_2_click_parent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnabonner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S'abonner"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                app:cornerRadius="@dimen/_5sdp"
                                />
                        </RelativeLayout>



                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/linear_profil_shp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profil_shp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/nom_shp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLength="20"
                    android:text="Boutique"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descrip_boutique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_light"
                    android:lines="1"
                    android:text="Description de la boutique de la boutique"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Membre depuis le 12/12/2012"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="normal" />


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>