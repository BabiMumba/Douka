<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_profile_picture_card_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/item_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="StoneTech"
                        android:textColor="@color/primary_text"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_text_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Android Developer"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/item_text_2"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <RelativeLayout
                                    android:id="@+id/item_0_click_parent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/item_0_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/item_0_value"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:ellipsize="end"
                                        android:lines="1"
                                        android:maxLength="20"
                                        android:text="Visiteur"
                                        android:textColor="#787878"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/item_0_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:ellipsize="end"
                                        android:lines="1"
                                        android:maxLength="20"
                                        android:text="15"
                                        android:textColor="@color/primary_text"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/item_divider_0"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="#ececec" />
                                <RelativeLayout
                                    android:id="@+id/item_1_click_parent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/item_1_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/item_1_value"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:ellipsize="end"
                                        android:lines="1"
                                        android:maxLength="20"
                                        android:text="Abonne"
                                        android:textColor="#787878"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/item_1_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:ellipsize="end"
                                        android:lines="1"
                                        android:maxLength="20"
                                        android:text="12"
                                        android:textColor="@color/primary_text"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/item_divider_2"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="#ececec" />

                                <RelativeLayout
                                    android:id="@+id/item_2_click_parent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/item_2_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/item_2_value"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:ellipsize="end"
                                        android:lines="1"
                                        android:maxLength="20"
                                        android:text="Abonnement"
                                        android:textColor="#787878"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/item_2_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:ellipsize="end"
                                        android:lines="1"
                                        android:maxLength="20"
                                        android:text="30"
                                        android:textColor="@color/primary_text"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/item_divider_1"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="#ececec" />

                                <RelativeLayout
                                    android:id="@+id/item_3_click_parent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Explorer"
                                        android:textColor="@color/Accent"
                                        android:padding="@dimen/_5sdp"
                                        />

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_profile_picture_card_parent"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profile"
                    android:background="@drawable/grey_bg" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>