<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:focusableInTouchMode="true"
    >
    <Toolbar
        android:id="@+id/toolbar_top"
        android:layout_alignParentTop="true"
        android:background="@color/Accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter un produit"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            />


    </Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/toolbar_top"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom de l'article"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/_14ssp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix de l'article en Fc"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/primary_text"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Prix en franc"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:maxLines="1"
                        android:id="@+id/prix_art"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_14ssp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description de l'article"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textStyle="bold"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginEnd="5sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_pro_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:text="CatÃ©gorie"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textStyle="normal"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/vert"
                        app:cornerRadius="@dimen/_5sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginStart="5sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/etat_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:text="Etat du produit"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textStyle="normal"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/vert"
                        app:cornerRadius="@dimen/_5sdp"
                        />
                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_category_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <TextView
                android:id="@+id/tv_etat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajouter les images(4 max)"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12sdp"
                    />
                <ImageButton
                    android:id="@+id/add_pro_images_btn"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/primary"
                    android:scaleType="centerCrop"
                    app:tint="@color/white"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/baseline_add_24" />


            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_pro_images_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/image_item_add"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_pro_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Publier"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:backgroundTint="@color/primary"
                app:cornerRadius="@dimen/_5sdp"
                />




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/loader_page"
        android:id="@+id/add_pro_loader"
        android:visibility="gone"
        />





</RelativeLayout>